<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:drawable="@color/button_press">
        <shape     
		    android:shape="rectangle"> 		    
		    <!-- 设置按钮的四个角为弧形 --> 
		    <!-- android:radius 弧形的半径 --> 
		    <corners android:radius="5dip" /> 
		</shape>
    </item>
    <item android:state_pressed="true" android:drawable="@color/button_clicked">
        <shape     
		    android:shape="rectangle"> 		    
		    <!-- 设置按钮的四个角为弧形 --> 
		    <!-- android:radius 弧形的半径 --> 
		    <corners android:radius="5dip" /> 
		</shape>
    </item>
    <item android:state_selected="true" android:drawable="@color/button_press">
        <shape     
		    android:shape="rectangle"> 		    
		    <!-- 设置按钮的四个角为弧形 --> 
		    <!-- android:radius 弧形的半径 --> 
		    <corners android:radius="5dip" /> 
		</shape>
    </item>
    <item >
        <shape     
		    android:shape="rectangle"> 	
		    <!-- 填充的颜色 --> 
    		<!-- <solid android:color="#00d200" /> 	 -->   
    		<solid android:color="#f0f0f0" /> 
		    <!-- 设置按钮的四个角为弧形 --> 
		    <!-- android:radius 弧形的半径 --> 
		    <corners android:radius="5dip" /> 
		</shape>
    </item>
</selector>